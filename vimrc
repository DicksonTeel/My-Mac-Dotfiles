" Set the backup directory
set backupdir=~/.cache/vim/backups

" Set the swap file directory
set dir=~/.cache/vim/swaps

" Turn on syntax highlighting
syntax on

" Turn on spellcheck
" set spell

" Show line numbers
" set number

" Show line number on the current line and relative numbers on other lines
set relativenumber

" Show file stats
set ruler

" Enable search highlighting
set hlsearch

" Enable incremental searching
set incsearch

" Enable line wrapping
set wrap
